[user]
        name = {{ git_name }}
        email = {{ git_email }}

[init]
        defaultBranch = main

[core]
        pager = delta

[interactive]
        diffFilter = delta --color-only

[delta]
        navigate = true
        light = false
        line-numbers = true
        side-by-side = true
        syntax-theme = Dracula

[merge]
        conflictstyle = diff3

[diff]
        colorMoved = default
